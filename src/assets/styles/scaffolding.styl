html {
    font-size 10px
    box-sizing border-box
}

html, body {
    margin 0
    padding 0
    min-height 100%
}

*, *:before, *:after {
    box-sizing inherit
}

body {
    color: $color-black
    font-size 1.4rem
    font-weight $font-regular
    line-height 2.1rem
    font-family $font-family
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased
    overflow-x hidden
}

a {
    color $color-primary
    text-decoration none
    &.decorate {
        text-decoration underline
    }
}

.main-wrap {
    max-width $width-max
    margin 0 auto
}

p {
    margin 0
}

.only-mobile {
  +layout-md-and-up() {
    display none
  }
}

// Modifier
.regular {
    font-weight 400
}

.color--blue {
    color $primary-blue
}

.color--white {
    color $white
}

.color--black {
    color $color-black
}

.color--yellow {
    color $primary-yellow
}

// Heading
h1,
h2,
h3 {
    font-weight 300
    line-height normal
    margin 0
}

h1 {
    font-size 4.2rem
    color $color-accent
    line-height 5rem
    font-weight $font-black
    +layout-sm() {}
}

h2 {
    font-size 2.4rem
    font-weight $font-black
    color $color-black
    +layout-sm() {
        font-size 2.8rem
        line-height 3.3rem
    }
}

h3 {
    font-size 3.2rem

    +layout-sm() {
        font-size 2.4rem
        line-height 2.8rem
    }
}

.title {
    font-size 1.8rem
    color $color-black
    font-weight $font-black
    line-height 2.4rem

    +layout-sm() {
        font-size 1.6rem
        line-height 2rem
    }
}
.text {
    font-size 1.4rem
    line-height 1.7rem
}
.page {
    padding-top 4.5rem
}
